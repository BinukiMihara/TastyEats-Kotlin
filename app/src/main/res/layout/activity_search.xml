<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <ImageButton
        android:id="@+id/imageButton14"
        android:layout_width="62dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back" />

    <TextView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/search"
        android:textColor="@color/accent"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButton14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton15"
        android:layout_width="75dp"
        android:layout_height="68dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/notification" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="302dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:background="@color/searchBar"
        android:ems="10"
        android:hint="@string/search"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="85dp" />

    <ImageButton
        android:id="@+id/imageButton16"
        android:layout_width="46dp"
        android:layout_height="51dp"
        app:srcCompat="@drawable/cross"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="85dp" />

    <ImageButton
        android:id="@+id/imageButton17"
        android:layout_width="72dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton16"
        app:srcCompat="@android:drawable/ic_menu_search"
        tools:layout_editor_absoluteY="80dp" />

    <TextView
        android:id="@+id/recentsearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="@string/RecentSearch"
        android:textColor="@color/accent"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recentsearch">

        <ImageButton
            android:id="@+id/btnhistory"
            android:layout_width="18dp"
            android:layout_height="35dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/primary"
            app:srcCompat="@drawable/history" />

        <TextView
            android:id="@+id/pizza"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:text="@string/pizza"
            android:textColor="@color/accent"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btncross"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/primary"
            app:srcCompat="@drawable/cross" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <ImageButton
            android:id="@+id/imageButton22"
            android:layout_width="76dp"
            android:layout_height="35dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/primary"
            app:srcCompat="@drawable/history" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="281dp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:text="@string/Burger"
            android:textColor="@color/accent"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imageButton21"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:backgroundTint="@color/primary"
            app:srcCompat="@drawable/cross" />

    </LinearLayout>

    <TextView
        android:id="@+id/TxtCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/TopCategory"
        android:textColor="@color/accent"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="364dp"
        android:layout_height="118dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rectangle"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TxtCategory">

        <ImageButton
            android:id="@+id/tik"
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:layout_marginBottom="51dp"
            android:backgroundTint="@color/primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/check_box" />

        <ImageView
            android:id="@+id/pizza2"
            android:layout_width="153dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/pizza2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtchizpixxa"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/ChickenPizza"
                android:textColor="@color/accent"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/prize1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/price1"
                android:textColor="@color/accent" />

            <ImageButton
                android:id="@+id/star"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary"
                app:srcCompat="@drawable/starts" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="118dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rectangle"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <ImageButton
            android:id="@+id/imageButton25"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/primary"
            app:srcCompat="@drawable/check_box" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="153dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/cheeseburger_1" />

        <LinearLayout
            android:layout_width="165dp"
            android:layout_height="103dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:text="@string/CheeseBurger"
                android:textColor="@color/accent"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:text="@string/price2"
                android:textColor="@color/accent" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/starts" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>